<Window x:Class="AutoUpdate.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="软件更新进度" Height="100" Width="400" Activated="Window_Activated" WindowStartupLocation="CenterScreen">
    <Grid>
        <ProgressBar x:Name="pgbUpdate" ValueChanged="pgbUpdate_ValueChanged" VerticalAlignment="Center" Height="20"></ProgressBar>
        <TextBlock x:Name="_result" VerticalAlignment="Bottom" HorizontalAlignment="Center"></TextBlock>
    </Grid>
</Window>
