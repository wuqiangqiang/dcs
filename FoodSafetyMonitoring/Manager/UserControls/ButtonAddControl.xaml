<UserControl x:Class="FoodSafetyMonitoring.Manager.UserControls.ButtonAddControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="Transparent" Margin="5" >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Manager/Themes/ImageButtonStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Name="btn" FontSize="16" FontWeight="600" FontFamily="宋体" Click="btn_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/Manager/Images/信息栏背head.png"/>
                </Button.Background>
            </Button>
            <Button Name="add" Grid.Column="1" Height="50" Style="{StaticResource AddImageImageButtonTemplate}" Click="Button_Click"/>
        </Grid>
    </Grid>
</UserControl>
