    <Style  TargetType="{x:Type TabItem}">
        <Setter  Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TabItem}">
                    <Border x:Name="layout" BorderBrush="Gray" BorderThickness="1,1,1,0" Background="{TemplateBinding Background}"
                                CornerRadius="0" Margin="2,0,2,0">
                        <Grid Height="46">
                            <TextBlock  TextAlignment="Center" Text="{TemplateBinding Header}" FontSize="14" Margin="15,0,15,0" FontFamily="微软雅黑" VerticalAlignment="Center"    HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#c5cacf"/>
                            <Setter TargetName="layout" Property="Margin" Value="2,0,2,-1"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="false">
                            <Setter Property="Background" Value="#fbfbfc"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
