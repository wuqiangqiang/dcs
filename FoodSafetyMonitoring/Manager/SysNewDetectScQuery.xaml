<UserControl x:Class="FoodSafetyMonitoring.Manager.SysNewDetectScQuery"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="clr-namespace:FoodSafetyMonitoring.Manager.UserControls"
    xmlns:toolkit ="http://schemas.microsoft.com/wpf/2008/toolkit">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/ImageButtonStyle.xaml"/>
                <!--<ResourceDictionary Source="Themes/Button_new.xaml"/>-->
                <ResourceDictionary Source="Themes/StackPanel.xaml"/>
                <ResourceDictionary Source="Themes/ComboBox.xaml"/>
                <ResourceDictionary Source="Themes/TextBlock.xaml"/>
                <ResourceDictionary Source="Themes/DatePicker.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="217"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Width="auto" Margin="5,5,5,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="37"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="352"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.Background>
                        <ImageBrush ImageSource="/res/query_title.png"/>
                    </Grid.Background>
                    <TextBlock Margin="40,0,0,0" VerticalAlignment="Center">查询设置</TextBlock>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.Background>
                        <ImageBrush ImageSource="/res/title_right.png"/>
                    </Grid.Background>
                </Grid>
            </Grid>
            <Border Grid.Row="1" Background="#fbfbfc" BorderThickness="1,0,1,1" BorderBrush="#e0e0e0" CornerRadius="0,0,3,3">
                <Grid Margin="0,10,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="37"/>
                        <RowDefinition Height="37"/>
                        <RowDefinition Height="37"/>
                        <RowDefinition Height="37"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" >
                        <StackPanel  VerticalAlignment="Center" >
                            <TextBlock MinWidth="50">设置日期:</TextBlock>
                            <toolkit:DatePicker x:Name="dtpStartDate" VerticalAlignment="Center" Height="26"/>
                            <TextBlock xml:space="preserve" MinWidth="10" Margin="5,0,5,0">至</TextBlock>
                            <toolkit:DatePicker x:Name="dtpEndDate" VerticalAlignment="Center" />
                            <TextBlock MinWidth="50">来源产地:</TextBlock>
                            <ComboBox x:Name="_province1" Width="120" Text="省" Margin="0,0,5,0"></ComboBox>
                            <ComboBox x:Name="_city1" Width="120" Text="市(州)" Margin="0,0,5,0"></ComboBox>
                            <ComboBox x:Name="_region1" Width="120" Text="区县"></ComboBox>
                            <TextBlock MinWidth="50">被检单位:</TextBlock>
                            <ComboBox x:Name="_source_company1" Width="240"></ComboBox>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="1">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock MinWidth="50">检测单位:</TextBlock>
                            <ComboBox x:Name="_detect_station" Width="260" HorizontalContentAlignment="Center"/>
                            <TextBlock MinWidth="52">检测师:</TextBlock>
                            <ComboBox Width="120" x:Name="_detect_person1" />
                            <TextBlock MinWidth="70">检测项目:</TextBlock>
                            <ComboBox Width="150" x:Name="_detect_item1" />
                            <TextBlock MinWidth="50" >检测方法:</TextBlock>
                            <ComboBox Width="240" x:Name="_detect_method" />
                        </StackPanel>
                    </Grid>
                    <Grid  Grid.Row="2">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock MinWidth="50">检测对象:</TextBlock>
                            <ComboBox Width="80" x:Name="_detect_object1" />
                            <TextBlock MinWidth="50">数据来源:</TextBlock>
                            <ComboBox Width="100" x:Name="_detect_type" />
                            <!--<TextBlock MinWidth="50">检测单位性质:</TextBlock>
                            <ComboBox Width="96" x:Name="_dept_type" />-->
                            <TextBlock MinWidth="50">检测结果:</TextBlock>
                            <ComboBox Width="120" x:Name="_detect_result1" />
                        </StackPanel>
                    </Grid>
                    <Grid  Grid.Row="3">
                        <StackPanel VerticalAlignment="Center">
                            <Button Name="_query" Width="120" Height="32" Style="{StaticResource SelectImageButtonTemplate}" Click="_query_Click" Margin="820,0,0,0" />
                            <Button Name="_export" Width="120" Height="32" Style="{StaticResource ExportImageButtonTemplate}" Click="_export_Click" Margin="50,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
        <!--<ListView Grid.Row="1" Name="lvlist" ItemsSource="{Binding}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" >
                        <ListView.View>
                            <GridView >
                                <GridViewColumn Width="100" Header="数据来源" DisplayMemberBinding="{Binding DetectTypeName}" ></GridViewColumn>
                                <GridViewColumn Width="150" Header="检测时间"  DisplayMemberBinding="{Binding DETECTDATE}" ></GridViewColumn>
                                <GridViewColumn Width="100" Header="检测单位"   DisplayMemberBinding="{Binding DeptName}"></GridViewColumn>
                                <GridViewColumn Width="100" Header="检测项目"   DisplayMemberBinding="{Binding ItemNAME}"></GridViewColumn>
                                <GridViewColumn Width="100" Header="检测对象"   DisplayMemberBinding="{Binding ObjectNAME}"></GridViewColumn>
                                <GridViewColumn Width="100" Header="检测样本"   DisplayMemberBinding="{Binding SAMPLENAME}"></GridViewColumn>
                                <GridViewColumn Width="100" Header="检测灵敏度"   DisplayMemberBinding="{Binding SENSITIVITYNAME}"></GridViewColumn>
                                <GridViewColumn Width="100" Header="检测方法"   DisplayMemberBinding="{Binding REAGENTNAME}"></GridViewColumn>
                                <GridViewColumn Width="80" Header="检测结果"   DisplayMemberBinding="{Binding RESULTNAME}"></GridViewColumn>
                                <GridViewColumn Width="150" Header="来源产地"   DisplayMemberBinding="{Binding areaname}"></GridViewColumn>
                                <GridViewColumn Width="100" Header="被检单位"   DisplayMemberBinding="{Binding COMPANYNAME}"></GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>-->
        <Grid Grid.Row="1" Margin="5,5,5,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="37"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="352"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.Background>
                        <ImageBrush ImageSource="/res/result_title.png"/>
                    </Grid.Background>
                    <StackPanel>
                        <TextBlock Margin="40,0,0,0" VerticalAlignment="Center">查询结果</TextBlock>
                        <TextBlock x:Name="_hj" Margin="20,0,0,0" VerticalAlignment="Center" Visibility="Hidden">合计</TextBlock>
                        <TextBlock x:Name="_title" Margin="10,0,10,0" VerticalAlignment="Center" MinWidth="10" Foreground="#1ba794" FontWeight="Bold"></TextBlock>
                        <TextBlock x:Name="_sj" Margin="0,0,0,0" VerticalAlignment="Center" Visibility="Hidden">条数据</TextBlock>
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.Background>
                        <ImageBrush ImageSource="/res/title_right.png"/>
                    </Grid.Background>
                </Grid>
            </Grid>
            <Border Grid.Row="1" BorderThickness="1,0,1,1" BorderBrush="#e0e0e0" CornerRadius="0,0,3,3" Background="#fbfbfc">
                <Grid  x:Name="grid_table">
                    <control:UcTableOperableView_NoTitle x:Name="_tableview" Background="Transparent" Margin="0"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
